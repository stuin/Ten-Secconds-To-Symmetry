<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:stuin="http://schemas.android.com/apk/res/com.stuin.tenseconds"
        android:id="@+id/Relative"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="drawer"
        android:background="@color/app_background">

    <TextView
            android:id="@+id/Top_Text"
            style="@style/style_text"
            android:text="@string/app_name"
            android:layout_alignParentTop="true"/>

    <Button
            android:id="@+id/Bot_Text"
            style="@style/style_background"
            android:background="@drawable/button"
            android:layout_alignParentBottom="true"
            android:onClick="startGame"
            android:text="@string/app_start"/>

    <com.stuin.tenseconds.Views.Player
            style="@style/style_base"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Player_Layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <com.stuin.tenseconds.Views.Grid
                android:id="@+id/Top_Grid"
                style="@style/style_base"
                android:layout_marginBottom="10dp"
                stuin:top="true"
                android:visibility="gone">

        </com.stuin.tenseconds.Views.Grid>

        <com.stuin.tenseconds.Views.Timer
                style="@style/style_background"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Bar_Layout">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                <TextView
                        android:id="@+id/Bar_Left"
                        style="@style/style_text"
                        android:text="@string/app_time"
                        android:gravity="end"/>

                <ProgressBar
                        android:id="@+id/Bar_Progress"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:max="1000"
                        android:progressDrawable="@drawable/progressbar"/>

                <TextView
                        android:id="@+id/Bar_Right"
                        style="@style/style_text"
                        android:text="@string/app_time"
                        android:gravity="start"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/Bar_Text"
                    style="@style/style_text"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

        </com.stuin.tenseconds.Views.Timer>

        <com.stuin.tenseconds.Views.Grid
                android:id="@+id/Bot_Grid"
                style="@style/style_base"
                android:layout_marginTop="10dp"
                android:visibility="gone">

        </com.stuin.tenseconds.Views.Grid>

    </com.stuin.tenseconds.Views.Player>

    <FrameLayout
            android:id="@+id/Drawer_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:onClick="drawer">

        <ImageView
                style="@style/style_menu"
                android:contentDescription="@string/app_time"
                android:background="@mipmap/menu"
                android:alpha=".25"/>
    </FrameLayout>


    <LinearLayout
            android:id="@+id/Drawer_Layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/app_menu"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone"
            android:onClick="drawer">

		<TextView
			style="@style/style_line"/>
        <ToggleButton
                android:text="@string/menu_in"
                style="@style/style_background"
                android:background="@drawable/button"
                android:id="@+id/Drawer_SignIn"/>
        <TextView
                style="@style/style_line"/>
        <TextView
                android:id="@+id/Level"
                style="@style/style_text"/>

		<TextView
                android:id="@+id/Drawer_Colorblind"
				style="@style/style_background"
				android:text="@string/menu_blind"
				android:visibility="gone"
                android:onClick="drawer"/>

		<TextView
			    style="@style/style_line"/>
        <TextView
                style="@style/style_text"
                android:text="@string/menu_credits"/>
        <TextView
                style="@style/style_text"
                android:text=""
                android:id="@+id/Drawer_version"/>
        <TextView
                style="@style/style_line"/>


    </LinearLayout>
</RelativeLayout>

