<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center" android:background="#ffb100" android:id="@+id/relative">
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/Score"
        android:layout_above="@+id/linearLayout" android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp" android:textSize="25sp"/>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_above="@+id/TopSpace"
            android:layout_centerHorizontal="true" android:id="@+id/Top">
    </GridLayout>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout" android:layout_centerHorizontal="true" android:id="@+id/TopSpace"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:background="#32010101"
            android:id="@+id/linearLayout" android:layout_centerVertical="true" android:layout_alignParentStart="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Right" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/progressBar" android:max="105"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Left" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_start"
            android:id="@+id/button"
            android:onClick="generate" android:layout_below="@+id/linearLayout" android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"/>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout" android:layout_centerHorizontal="true"
            android:id="@+id/BottomSpace"/>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/BottomSpace"
            android:layout_centerHorizontal="true" android:id="@+id/Bottom">
    </GridLayout>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" android:id="@+id/TopChange"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" android:id="@+id/BottomChange"/>
</RelativeLayout>
