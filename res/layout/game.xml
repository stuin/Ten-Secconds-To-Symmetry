<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:background="#ffb100" android:id="@+id/relative"
                android:gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent">

    <Button
            android:text="@string/app_start" android:id="@+id/button" android:onClick="generate"
            android:layout_below="@+id/linearLayout" android:layout_marginTop="75dp"/>
    <TextView
            android:text="@string/app_name" android:id="@+id/Score"
            android:layout_above="@+id/linearLayout" android:layout_marginBottom="75dp" style="@style/style_title"/>

    <GridLayout
            android:layout_above="@+id/TopSpace" android:id="@+id/Top"/>
    <Space
            android:layout_above="@+id/linearLayout" android:id="@+id/TopSpace"/>

    <LinearLayout
            android:orientation="horizontal" android:background="#32010101"
            android:id="@+id/linearLayout" android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:gravity="center">
        <TextView
                android:id="@+id/Right"/>
        <ProgressBar
                android:id="@+id/progressBar" android:max="105"
                style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/Left"/>
    </LinearLayout>

    <Space
            android:layout_below="@+id/linearLayout" android:id="@+id/BottomSpace"/>
    <GridLayout
            android:layout_below="@+id/BottomSpace" android:id="@+id/Bottom"/>

    <TextView
            android:visibility="gone" android:id="@+id/TopChange"/>
    <TextView
            android:visibility="gone" android:id="@+id/BottomChange"/>
</RelativeLayout>
