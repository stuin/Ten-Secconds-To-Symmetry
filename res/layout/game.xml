<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center" android:background="#ffb100">

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_above="@+id/TopSpace"
            android:layout_centerHorizontal="true" android:id="@+id/Top">
    </GridLayout>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout" android:layout_centerHorizontal="true" android:id="@+id/TopSpace"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/Score"
            android:textSize="40dp"
            android:layout_marginBottom="75dp" android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:background="#32010101"
            android:layout_marginLeft="0dp"
            android:id="@+id/linearLayout" android:layout_centerVertical="true" android:layout_alignParentStart="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Right"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/progressBar" android:max="105"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Left"/>
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Start Game"
            android:id="@+id/button"
            android:layout_marginTop="75dp"
            android:layout_below="@+id/linearLayout" android:layout_centerHorizontal="true" android:onClick="generate"/>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout" android:layout_centerHorizontal="true"
            android:id="@+id/BottomSpace"/>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/BottomSpace"
            android:layout_centerHorizontal="true" android:id="@+id/Bottom">
    </GridLayout>
</RelativeLayout>
