<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="app_quart">150sp</dimen>
	
	<style name="style_app">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/style_base</item>
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Horizontal</item>
	</style>

    <style name="style_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_text</item>
        <item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_gravity">center</item>
    </style>

    <style name="style_background" parent="style_base">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/color_black</item>
        <item name="android:alpha">.25</item>
    </style>
</resources>
