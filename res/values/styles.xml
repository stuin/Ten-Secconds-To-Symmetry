<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="style_app" parent="android:Theme.Holo">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/style_text</item>
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Horizontal</item>
	</style>

    <style name="style_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_text</item>
    </style>

    <style name="style_background" parent="style_text">
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/app_layout</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="style_line" parent="style_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/app_text</item>
    </style>

    <declare-styleable name="Grid">
        <attr name="top" format="boolean"/>
    </declare-styleable>
</resources>
